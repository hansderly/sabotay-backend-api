{
	"compilerOptions": {
		"target": "ES2016",
		"module": "CommonJS",
		"outDir": "dist/",
		"rootDir": "src/",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"sourceMap": true
	},
	"exclude": ["node_modules", "dist"]
}
